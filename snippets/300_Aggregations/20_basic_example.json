# Basic aggregation - number of documents in the index
GET /cars/transactions/_search?search_type=count
{
    "aggregations" : {
        "counts" : {
            "global" : {}   
        }
    }
}


# Now we nest a terms bucket inside the global bucket
GET /cars/transactions/_search?search_type=count
{
   "aggs":{ 
      "count": {
         "global": {},
         "aggs": {  
            "colors": { 
               "terms": { 
                  "field": "color"
               }
            }
         }
      }
   }
}


# Now nest an avg metric inside the terms bucket
GET /cars/transactions/_search?search_type=count
{
   "aggs": {
      "count": {
         "global": {},
         "aggs": {
            "colors": {
               "terms": {
                  "field":"color"
               },
               "aggs": { 
                  "avg_price": { 
                     "avg": {
                        "field":"price"
                     }
                  }
               }
            }
         }
      }
   }
}